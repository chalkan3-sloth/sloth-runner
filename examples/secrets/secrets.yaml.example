# Example secrets file for sloth-runner
# Add your secrets using:
# echo 'yourpassword' | sloth-runner secrets add --stack your-stack --from-yaml secrets.yaml --password-stdin

secrets:
  # API Keys
  api_key: "your-api-key-here"
  github_token: "ghp_xxxxxxxxxxxxxxxxxxxx"

  # Database Credentials
  db_password: "your-database-password"
  db_connection_string: "postgresql://user:pass@localhost:5432/db"

  # Cloud Provider Credentials
  aws_access_key_id: "AKIAIOSFODNN7EXAMPLE"
  aws_secret_access_key: "wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"

  # Service Credentials
  docker_registry_password: "your-registry-password"
  ssh_private_key: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    your-private-key-here
    -----END OPENSSH PRIVATE KEY-----

  # Application Secrets
  jwt_secret: "your-jwt-secret-key"
  encryption_key: "your-encryption-key"
