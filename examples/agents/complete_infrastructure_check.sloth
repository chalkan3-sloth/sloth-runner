    :command(function(this, params)
        log.info("ğŸ” Verificando ladyguica...")
        
        local output, err, failed = exec.run("echo 'Ladyguica OK' && hostname")
        
        if not failed then
            log.info("âœ… Ladyguica estÃ¡ online!")
            log.info("ğŸ“‹ " .. output)
            return true, "Online"
