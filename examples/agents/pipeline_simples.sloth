-- Workflow
workflow.define("pipeline_simples")
    :description("ğŸš€ Pipeline simples nos dois agents")
    :version("1.0.0")
    :tasks({ task_ladyguica, task_keiteguica })
    :config({ timeout = "2m" })
    :on_complete(function(success, results)
        if success then
            log.info("ğŸ‰ PIPELINE SIMPLES: SUCESSO!")
        else
            log.error("âŒ Pipeline simples falhou")
        end
        return true
    end)